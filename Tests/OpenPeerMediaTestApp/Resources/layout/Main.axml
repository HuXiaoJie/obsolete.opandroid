<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/myMainLinearLayout">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/myControlPanelLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/myRemoteIPAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="192.168." />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myButtonBarLinearLayout">
            <Button
                android:id="@+id/myMediaControlButton"
                android:text="@string/media_control_button_text"
                android:layout_height="match_parent"
                android:layout_width="200dp" />
            <Button
                android:text="@string/audio_output_button_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/myAudioOutputButton" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/myLocalViewLinearLayout" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/myRemoteViewLinearLayout" />
</LinearLayout>