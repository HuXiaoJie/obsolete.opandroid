<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".media" >

    <EditText
        android:id="@+id/remoteIPAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="192.168." >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonMedia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Media Control" />

            <Button
                android:id="@+id/buttonAudioOutput"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Audio Output" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/localViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remoteViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
