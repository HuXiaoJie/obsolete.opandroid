<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_vertical"
    android:paddingLeft="@dimen/padding_edge"
    android:paddingRight="@dimen/padding_edge"
    android:paddingTop="@dimen/padding_vertical" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/profile_image_size_in_chat"
        android:layout_height="@dimen/profile_image_size_in_chat"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_spacing_internal"
        android:layout_toRightOf="@id/avatar"
        android:hint="user name" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_spacing_internal"
        android:layout_toRightOf="@id/user"
        android:hint="send time" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginLeft="@dimen/padding_spacing_internal"
        android:layout_marginTop="@dimen/padding_spacing_internal"
        android:layout_toRightOf="@id/avatar"
        android:background="@drawable/speech_bubble_orange" >
    </TextView>

</RelativeLayout>