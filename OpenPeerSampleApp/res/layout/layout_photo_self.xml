<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingBottom="@dimen/padding_vertical"
       android:paddingLeft="@dimen/padding_edge"
       android:paddingRight="@dimen/padding_edge"
       android:paddingTop="@dimen/padding_vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentRight="true"
        android:hint="send time"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="@dimen/padding_spacing_internal"
        android:layout_toLeftOf="@id/time"
        android:text="Me"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/thumbnail_size_in_chat"
        android:layout_height="@dimen/thumbnail_size_in_chat"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/time"
        android:layout_marginRight="@dimen/padding_spacing_internal"
        android:layout_marginTop="@dimen/padding_spacing_internal"
        android:layout_toLeftOf="@+id/avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/person"/>

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_accept"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignRight="@id/imageView"
        />

    <ProgressBar
        android:id="@id/progress"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>

</merge>